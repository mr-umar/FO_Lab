/*
**  Fichero:    sesion3_ej5a.c
**  Autor:      Umar
**  Fecha:      09-10-2024
**  
**  Descripción: Programa que pide un número natural m (m >= 0) y
**               muestra el factorial de m.
*/

#include <stdio.h>

int main() {
    unsigned long m, factorial = 1;
    int i;  // Variable de control del bucle

    printf("Introduzca el valor de m: ");
    scanf("%lu", &m);

    for (i = 1; i <= m; i++) {
        factorial *= i;
    }

    printf("%lu! = %lu\n", m, factorial);
    return 0;
}


/*
**  Fichero:    sesion3_ej5b.c
**  Autor:      Umar
**  Fecha:      09-10-2024
**  
**  Descripción: Programa que pide un número natural n (n >= 0) y
**               calcula una aproximación del número e usando la serie.
*/

#include <stdio.h>

int main() {
    int n;
    double e = 1.0;
    double factorial = 1.0;
    int i, j;  // Variables de control de bucles

    printf("Introduzca el valor de n: ");
    scanf("%d", &n);

    for (i = 1; i <= n; i++) {
        factorial = 1.0;
        for (j = 1; j <= i; j++) {
            factorial *= j;
        }
        e += 1.0 / factorial;
    }

    printf("Numero e = %.6f\n", e);
    return 0;
}








