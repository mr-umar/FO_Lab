/*
**  Fichero:    sesion3_ej3a.c
**  Autor:      Umar
**  Fecha:      09-10-2024
**  
**  Descripción: Programa que pide una secuencia de 10 números naturales y
**               muestra la suma de todos ellos.
*/

#include <stdio.h>

int main() {
    int num, suma = 0;

    printf("Introduzca una secuencia de 10 numeros naturales:\n");
    for (int i = 0; i < 10; i++) {
        scanf("%d", &num);
        suma += num;
    }

    printf("Suma: %d\n", suma);
    return 0;
}



/*
**  Fichero:    sesion3_ej3b.c
**  Autor:      Umar
**  Fecha:      09-10-2024
**  
**  Descripción: Programa que pide una secuencia de números naturales hasta
**               que se ingresa -1. Calcula y muestra la suma de los números
**               sin incluir el -1. La secuencia puede estar vacía.
*/

#include <stdio.h>

int main() {
    int num, suma = 0;

    printf("Introduzca una secuencia de numeros naturales y finalice con -1:\n");
    scanf("%d", &num);

    while (num != -1) {
        suma += num;
        scanf("%d", &num);
    }

    printf("Suma: %d\n", suma);
    return 0;
}/*
**  Fichero:    sesion3_ej3c.c
**  Autor:      Umar
**  Fecha:      09-10-2024
**  
**  Descripción: Programa que pide una secuencia de números naturales hasta
**               que se ingresa -1. Calcula y muestra la suma de los números
**               sin incluir el -1. La secuencia debe contener al menos un
**               número natural.
*/

#include <stdio.h>

int main() {
    int num, suma = 0;

    printf("Introduzca una secuencia de numeros naturales y finalice con -1:\n");
    do {
        scanf("%d", &num);
        if (num != -1) {
            suma += num;
        }
    } while (num != -1);

    printf("Suma: %d\n", suma);
    return 0;
}









