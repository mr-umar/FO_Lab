**  
**  Descripción: Programa que pide al usuario un número natural n (n >= 0)
**               y muestra la secuencia de números naturales de 0 a n.
*/

#include <stdio.h>

int main() {
    int n;
    printf("Introduzca un numero natural: ");
    scanf("%d", &n);

    if (n >= 0) {
        printf("Secuencia de numeros: ");
        for (int i = 0; i <= n; i++) {
            printf("%d", i);
            if (i < n) {
                printf(", ");
            }
        }
        printf("\n");
    } else {
        printf("El numero introducido no es un natural valido.\n");
    }

    return 0;
}
